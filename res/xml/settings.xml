<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Tracking preferences -->
    <PreferenceCategory
        android:title="@string/tracking_category_title">
        <CheckBoxPreference
            android:key="@string/pref_key_tracker_status"
            android:title="@string/tracker_status_title"
            android:defaultValue="true" />
    </PreferenceCategory>
    
    <!-- Account preferences -->
    <PreferenceCategory
        android:title="@string/account_category_title">
        <Preference
            android:key="@string/pref_key_account_username"
            android:title="@string/username_title"
            android:label="@null" />
    </PreferenceCategory>
    
    <!-- About preferences -->
    <PreferenceCategory
        android:title="@string/about_category_title">
        <Preference
            android:key="@string/pref_key_privacy_policy"
            android:title="@string/privacy_policy_title"
            android:label="@null" />
        <Preference
            android:key="@string/pref_key_app_version"
            android:title="@string/app_version_title"
            android:label="@null"
            android:enabled="false" />
        <Preference
            android:key="@string/pref_key_app_build"
            android:title="@string/app_build_title"
            android:label="@null"
            android:enabled="false" />
        <Preference
            android:key="@string/pref_key_sdk_version"
            android:title="@string/sdk_version_title"
            android:label="@null"
            android:enabled="false" />
        <Preference
            android:key="@string/pref_key_sdk_build"
            android:title="@string/sdk_build_title"
            android:label="@null"
            android:enabled="false" />
        </PreferenceCategory>
</PreferenceScreen>